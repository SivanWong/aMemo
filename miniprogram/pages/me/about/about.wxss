/* pages/me/about/about.wxss */

page {
  background: #f1f1f1;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
  border-radius: 50%;
}

.title {
  height: auto;
  margin: 40rpx 0 100rpx 0;
  color: #4E83F5;
  font-size: 48rpx;
}

.about {
  background: #fff;
  border-radius: 25rpx;
  width: 80%;
  height: 50%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0px 0px 15px #e6e6e6; 
  -webkit-box-shadow: 0px 0px 15px #e6e6e6; 
  box-shadow: 0px 0px 15px #e6e6e6;
  display: flex;
  flex-direction: column;
  padding: 25rpx 15rpx;
}

.info {
  height: auto;
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info text {
  margin: 0 15px 0;
  line-height: 48px;
  font-size: 36rpx;
}