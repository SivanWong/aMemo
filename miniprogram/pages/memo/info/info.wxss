/* pages/memo/info/info.wxss */

page {
  background: #fff;
}

.header {
  width: 100%;
  padding: 55rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-img {
  width: 192px;
  height: 192px;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-top: 55rpx;
}

.top {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.top-title,
.top-details {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 48rpx;
}

.top-title {
  width: 60%;
  font-size: 48rpx;
}

.top-details {
  width: 80%;
  color: rgb(130, 133, 139);
  margin-top: 15rpx;
}

.bottom {
  width: 100%;
  display: flex;
  margin-top: 100rpx;
}

.bottom-left,
.bottom-right {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-complete {
  display: flex;
  flex-direction: column;
  background: rgb(159, 210, 248);
  border-radius: 25rpx;
  box-shadow: 0px 0px 15px #8a8a8a;
  padding: 35rpx;
}

.complete-text,
.complete-time,
.complete-date {
  color: #fff;
  line-height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.complete-text {
  font-size: 24rpx;
}

.complete-time {
  font-size: 64rpx;
}

.bottom-remind {
  display: flex;
  flex-direction: column;
  border-radius: 25rpx;
  box-shadow: 0px 0px 15px #8a8a8a;
  padding: 35rpx;
}

.remind-text,
.remind-time,
.remind-kind {
  line-height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.remind-text {
  font-size: 24rpx;
}

.remind-time {
  font-size: 64rpx;
}




